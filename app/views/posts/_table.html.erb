<table class='table table-striped table-hover'>
  <tr>
    <th class="col-sm-6">Post Name</th>
    <th class="col-sm-3">From</th>
    <th class="col-sm-3">Creation Date</th>
  </tr>
  <% posts.each do |post| %>
    <tr>
      <td class="col-sm-6"><%= link_to post.title, show_or_edit_post_path(post) %></td>
      <td class="col-sm-3"><%= post.from %></td>
      <td class="col-sm-3"><%= post.created_at.strftime('%Y-%m-%d %H:%M:%S') %> UTC</td>
    </tr>
<% end %>
</table>
